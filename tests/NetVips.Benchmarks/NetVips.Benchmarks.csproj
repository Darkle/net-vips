<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <Optimize>true</Optimize>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <LangVersion>7.3</LangVersion>
    <BenchmarkWithNuGetBinaries>true</BenchmarkWithNuGetBinaries>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.12.1" />
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="7.20.0.1" />
    <PackageReference Include="NetVips.Native" Version="8.10.0-beta2" Condition="'$(BenchmarkWithNuGetBinaries)' == 'true'" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-rc0003" />
    <PackageReference Include="SkiaSharp" Version="2.80.0" />
    <PackageReference Include="System.Drawing.Common" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\NetVips\NetVips.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Images\" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="Images\t.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>t.jpg</TargetPath>
    </ContentWithTargetPath>

    <ContentWithTargetPath Include="Images\t.tif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>t.tif</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

</Project>
